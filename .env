# Configuración de la aplicación
# Configuración de la aplicación
ENVIRONMENT=development
DEBUG=true

# Configuración JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRATION_TIME_MINUTES=30

# Configuración MongoDB
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=clients_db
USERS_COLLECTION=users

# Para MongoDB con autenticación (en producción)
# MONGODB_URL=mongodb://admin:password123@localhost:27017/clients_db?authSource=admin

# Configuración de API
API_V1_PREFIX=/api/v1

# Configuración CORS (separar por comas en producción)
ALLOWED_ORIGINS=*


